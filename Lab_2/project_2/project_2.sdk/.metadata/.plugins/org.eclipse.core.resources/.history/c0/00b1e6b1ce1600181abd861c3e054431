#include"xparameters.h"
#include"xgpio.h"
#include<stdio.h>
#include<unistd.h>
#include<time.h>

int main(void)
{
	time_t rawTime;
	struct tm* timeInfo;
	XGpio dip , push;
	int status;

	time(&rawTime;)
	//int psb_check , dip_check;

	xil_printf("-- Start of the Program --\r\n");
	xil_printf("\tLauro Cabral\r\n");

	// Initialize the XGpio instance provided by the caller based on the given DeviceID. 
	status = XGpio_Initialize(&dip,XPAR_SWITCHES_DEVICE_ID);
	if(status == 2)//XST_SUCCESS)
		print("Success\n");
	else
	{
		print("Failure init\n");
		return XST_FAILURE;
	}

	XGpio_SetDataDirection(&dip, 1 , 0xffffffff);

	XGpio_Initialize(&push,XPAR_BUTTONS_DEVICE_ID);
	XGpio_SetDataDirection(&push, 1 , 0xffffffff);

	while(1)
	{
		//psb_check = XGpio_DiscreteRead(&push,1);
		//xil_printf("Push Buttons Status %x\r\n", psb_check);
		//dip_check = XGpio_DiscreteRead(&dip,1);
		//xil_printf("Dip Switch Status %x\r\n", dip_check);
		sleep(1);
	}
} 
